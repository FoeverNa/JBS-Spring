<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDAO"> 

		<insert id="insertUser">
		INSERT 
		INTO 
		USERS 
		VALUES(
		#{id}, 
		#{password}, 
		#{name}, 
		#{role})
		</insert>
		
		
		<select id="getUser" resultType="user">
		<![CDATA[	
		SELECT * 
		FROM USERS 
		WHERE 
		ID=#{id}
		AND 
		PASSWORD=#{password}
		]]>
			
		</select>
		
</mapper>
